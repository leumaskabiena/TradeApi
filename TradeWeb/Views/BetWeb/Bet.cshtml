            <div class="col-md-10">
                @Html.DisplayFor(model => model.Currentprice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Currentprice, "", new { @class = "text-danger" })
            </div>
