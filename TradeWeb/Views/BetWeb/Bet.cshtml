        <h4>BetModelView</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.itemref, htmlAttributes: new { @class = "control-label col-md-2" })
